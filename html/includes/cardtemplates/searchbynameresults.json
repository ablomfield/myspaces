{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Search by name...",
            "wrap": true,
            "fontType": "Default",
            "size": "Large",
            "weight": "Bolder",
            "color": "Accent",
            "isSubtle": true
        },
        {
            "type": "Input.Text",
            "isVisible": false,
            "id": "cardtype",
            "value": "searchbynameresults"
        },
        {
            "type": "TextBlock",
            "text": "Results for '{{searchterm}}'",
            "wrap": true,
            "id": "="
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
{{orgdetails}}
            ],
            "placeholder": "Placeholder text",
            "style": "expanded",
            "id": "orgid"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Continue",
                    "associatedInputs": "auto"
                }
            ]
        }
    ],
    "verticalContentAlignment": "Top"
}
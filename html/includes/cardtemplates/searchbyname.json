{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Search by name...",
            "wrap": true,
            "fontType": "Default",
            "size": "Large",
            "weight": "Bolder",
            "color": "Accent",
            "isSubtle": true
        },
        {
            "type": "Input.Text",
            "isVisible": false,
            "id": "cardtype",
            "value": "searchbyname"
        },
        {
            "type": "Input.Text",
            "placeholder": "Organization name",
            "id": "searchterm",
            "label": "Organization name:",
            "isRequired": true,
            "errorMessage": "You must enter a name to search!"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Search",
                    "associatedInputs": "auto"
                }
            ]
        }
    ],
    "verticalContentAlignment": "Top"
}
{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Please confirm access:",
            "wrap": true,
            "fontType": "Default",
            "size": "Large",
            "weight": "Bolder",
            "color": "Accent",
            "isSubtle": true
        },
        {
            "type": "Input.Text",
            "isVisible": false,
            "id": "cardtype",
            "value": "requestapprove"
        },
        {
            "type": "Input.Text",
            "placeholder": "Placeholder text",
            "isVisible": false,
            "id": "requestorid",
            "value": "{{requestorid}}"
        },
        {
            "type": "Input.Text",
            "placeholder": "Placeholder text",
            "id": "orgid",
            "isVisible": false,
            "value": "{{orgid}}"
        },
        {
            "type": "TextBlock",
            "text": "{{requestorname}} ({{requestoremail}}) is requesting access to {{orgname}}",
            "wrap": true,
            "id": "="
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Approve",
                                    "id": "action.approve",
                                    "data": "approve"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Decline",
                                    "id": "action.decline",
                                    "data": "decline"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "verticalContentAlignment": "Top"
}
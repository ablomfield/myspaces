{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Search for an Organization",
            "wrap": true,
            "fontType": "Default",
            "size": "Large",
            "weight": "Bolder",
            "color": "Accent",
            "isSubtle": true
        },
        {
            "type": "Input.Text",
            "isVisible": false,
            "id": "cardtype",
            "value": "searchmenu"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "By Organization Name",
                    "value": "searchbyname"
                },
                {
                    "title": "By Organization ID",
                    "value": "searchbyid"
                },                
                {
                    "title": "By Customer Email",
                    "value": "searchbycustomer"
                },
                {
                    "title": "By Subscription ID",
                    "value": "searchbysub"
                }
            ],
            "id": "action",
            "label": "How would you like to search:",
            "style": "expanded",
            "isRequired": true,
            "errorMessage": "You must select a search type!"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Continue",
                    "associatedInputs": "auto"
                }
            ]
        }
    ],
    "verticalContentAlignment": "Top"
}
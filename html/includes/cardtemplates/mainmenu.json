{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Keymaster Menu",
            "wrap": true,
            "fontType": "Default",
            "size": "Large",
            "weight": "Bolder",
            "color": "Accent",
            "isSubtle": true
        },
        {
            "type": "Input.Text",
            "isVisible": false,
            "id": "cardtype",
            "value": "mainmenu"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
                {
                    "title": "Request additional access",
                    "value": "search"
                },
                {
                    "title": "Confirm or Remove existing access",
                    "value": "display"
                }
            ],
            "placeholder": "Placeholder text",
            "id": "action",
            "label": "Please select the action you wish to perform:",
            "style": "expanded",
            "isRequired": true,
            "errorMessage": "You must select an action!"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Continue",
                    "associatedInputs": "auto"
                }
            ]
        }
    ],
    "verticalContentAlignment": "Top"
}
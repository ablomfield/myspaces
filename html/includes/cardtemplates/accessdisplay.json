{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Current Admin Access",
            "wrap": true,
            "fontType": "Default",
            "size": "Large",
            "weight": "Bolder",
            "color": "Accent",
            "isSubtle": true
        },
        {
            "type": "Input.Text",
            "isVisible": false,
            "id": "cardtype",
            "value": "accessdisplay"
        },
        {
            "type": "TextBlock",
            "text": "You have access to the following organizations:",
            "wrap": true,
            "fontType": "Default",
            "size": "Medium",
            "color": "Accent"
        },
        {
            "type": "Input.ChoiceSet",
            "choices": [
{{admindetails}}
            ],
            "placeholder": "Placeholder text",
            "style": "expanded",
            "spacing": "None",
            "isRequired": true,
            "errorMessage": "You must select an organization to remove access.",
            "label": "Select an organization to remove access",
            "id": "orgid"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Remove Access",
                                    "associatedInputs": "auto"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Close",
                                    "associatedInputs": "none"
                                }
                            ]
                        }
                    ],
                    "horizontalAlignment": "Right"
                }
            ]
        }
    ],
    "verticalContentAlignment": "Top"
}
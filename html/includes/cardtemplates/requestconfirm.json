{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3",
    "body": [
        {
            "type": "TextBlock",
            "text": "Request submitted",
            "wrap": true,
            "fontType": "Default",
            "size": "Large",
            "weight": "Bolder",
            "color": "Warning",
            "isSubtle": true
        },
        {
            "type": "Input.Text",
            "placeholder": "Placeholder text",
            "isVisible": false,
            "id": "cardtype",
            "value": "requestconfirm"
        },
        {
            "type": "TextBlock",
            "text": "Your request for access to {{orgname}} has been submitted. You will be notified once it is approved or declined.",
            "wrap": true,
            "fontType": "Default",
            "size": "Default",
            "color": "Default"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Close",
                    "associatedInputs": "none"
                }
            ]
        }
    ],
    "verticalContentAlignment": "Top"
}